@model BookServiceModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.BookAService").Text);
    //page class
    Html.AppendPageCssClassParts("html-contact-page");
}

<style>
    .book-a-service-page .topic-block-title {
        text-align: center;
        margin-bottom: 30px;
        text-transform: uppercase;
    }

    .book-a-service-page textarea {
        min-height: 90px;
    }

    .result {
        color: #f1641f;
        font-size: 24px;
    }
</style>

<div class="page book-a-service-page">
    <div class="page-body">
        <div class="container">
            <div class="my-4">
                @await Component.InvokeAsync("TopicBlock", new { systemName = "book_a_service" })
            </div>
            @if (Model.SuccessfullySent)
            {
                <div class="result">
                    @Model.Result
                </div>
            }
            else
            {
                <form asp-route="NopStation.MikesChainsaw.BookAService" method="post">
                    <div asp-validation-summary="ModelOnly" class="message-error"></div>
                    <div class="fieldset">
                        <div class="form-fields">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="inputs">
                                        @*<label asp-for="FullName" asp-postfix=":"></label>*@
                                        <input asp-for="FullName" placeholder="@T("ContactUs.FullName.Hint")" class="fullname" />
                                        <nop-required />
                                        <span asp-validation-for="FullName"></span>
                                    </div>

                                </div>
                                <div class="col-lg-6">
                                    <div class="inputs">
                                        @*<label asp-for="Email" asp-postfix=":"></label>*@
                                        <input asp-for="Email" placeholder="@T("NopStation.Theme.MikesChainsaw.bookservice.Email")" class="email" />
                                        <nop-required />
                                        <span asp-validation-for="Email"></span>
                                    </div>
                                </div>
                            </div>
                            @if (Model.SubjectEnabled)
                            {
                                <div class="inputs">
                                    @*<label asp-for="Subject" asp-postfix=":"></label>*@
                                    <input asp-for="Subject" placeholder="@T("NopStation.Theme.MikesChainsaw.bookservice.Subject")" class="subject" />
                                    <nop-required />
                                    <span asp-validation-for="Subject"></span>
                                </div>
                            }

                            <div class="inputs">
                                @*<label asp-for="PhoneNumber" asp-postfix=":"></label>*@
                                <input asp-for="PhoneNumber" placeholder="@T("NopStation.Theme.MikesChainsaw.bookservice.PhoneNumber")" class="PhoneNumber" />
                                <nop-required />
                                <span asp-validation-for="PhoneNumber"></span>
                            </div>
                            <div class="inputs">
                                @*<label asp-for="PickupRequired" asp-postfix=":"></label>*@
                                <input asp-for="PickupRequired" placeholder="@T("NopStation.Theme.MikesChainsaw.bookservice.PickupRequired")" class="PickupRequired" />
                                <nop-required />
                                <span asp-validation-for="PickupRequired"></span>
                            </div>
                            <div class="inputs">
                                @*<label asp-for="MachineMakeModel" asp-postfix=":"></label>*@
                                <input asp-for="MachineMakeModel" placeholder="@T("NopStation.Theme.MikesChainsaw.bookservice.MachineMakeModel")" class="MachineMakeModel" />
                                <nop-required />
                                <span asp-validation-for="MachineMakeModel"></span>
                            </div>
                            <div class="inputs">
                                @*<label asp-for="BriefSummary" asp-postfix=":"></label>*@
                                <textarea asp-for="BriefSummary" rows="10" placeholder="@T("NopStation.Theme.MikesChainsaw.bookservice.BriefSummary")" class="BriefSummary"></textarea>
                                <nop-required />
                                <span asp-validation-for="BriefSummary"></span>
                            </div>
                            @if (Model.DisplayCaptcha)
                            {
                                <nop-captcha />
                            }
                        </div>
                    </div>
                    <div class="buttons">
                        <input type="submit" name="send-email" class="button-1 contact-us-button" value="@T("BookService.Button")" />
                    </div>
                </form>
            }
            @await Component.InvokeAsync("Widget", new { widgetZone = PublicWidgetZones.ContactUsBottom })
        </div>
    </div>
</div>
