@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="product-grid home-page-product-grid slider-wrapper" dir="auto">
        <div class="title">
            <strong>@T("Homepage.Products")</strong>
        </div>
        <div class="item-grid item-grid-responsive-slider">            
            @foreach (var item in Model)
            {
                <div>
                    <div class="item-box">
                        @await Html.PartialAsync("_ProductBox", item)
                    </div>
                </div>
            }                 
        </div>
    </div>
}