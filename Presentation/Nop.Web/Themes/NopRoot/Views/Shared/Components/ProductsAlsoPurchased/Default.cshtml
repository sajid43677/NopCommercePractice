@model IList<ProductOverviewModel>
@if (Model.Count > 0)
{
    <div class="also-purchased-products-grid product-grid slider-wrapper">
        <div class="title">
            <strong>@T("Products.AlsoPurchased")</strong>
        </div>
        <div class="item-grid item-grid-responsive-slider">
            @foreach (var item in Model)
            {
                <div>
                    <div class="item-box">
                        @await Html.PartialAsync("_ProductBox", item)
                    </div>
                </div>
            }
        </div>
    </div>
}